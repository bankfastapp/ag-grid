{
  "name": "ag-behavioural-testing",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "testing/behavioural",
  "projectType": "library",
  "targets": {
    "lint": {
      "command": "eslint",
      "options": {
        "cwd": "{projectRoot}"
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/reports/ag-behavioural-testing.xml"],
      "dependsOn": ["ag-grid-community:build:css", "ag-grid-enterprise:build:css"],
      "options": {
        "cwd": "{projectRoot}",
        "config": "{projectRoot}/vitest.config.ts"
      },
      "configurations": {
        "ci": {
          "outputFile": "../../reports/ag-behavioural-testing.xml",
          "reporters": ["junit"]
        },
        "watch": {
          "watch": true
        },
        "update": {
          "update": true
        }
      }
    },
    "benchmark": {
      "command": "vitest bench --run",
      "dependsOn": ["ag-grid-community:build:css", "ag-grid-enterprise:build:css"],
      "options": {
        "cwd": "{projectRoot}"
      },
      "configurations": {
        "watch": {
          "watch": true
        },
        "update": {
          "update": true
        }
      }
    }
  },
  "tags": ["test", "module"]
}
